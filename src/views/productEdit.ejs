<!DOCTYPE html>
<html lang="en">

<%- include('./partials/head', { title: 'Editar producto' }) %>

<body style="min-height: 100vh; background-color: #f8f9fa; display: flex; flex-direction: column;">

    <%- include('./partials/header') %>

    <main class="flex-grow-1 d-flex justify-content-center align-items-center"
        style="background-image: url('/images/jong-marshes-79mNMAvSORg-unsplash.jpg'); background-size: cover; background-position: center;">
        <!-- Contenedor del formulario -->
        <div class="container" style="margin-top: 20px; margin-bottom: 20px;">
            <div class="row">
                <div class="col-md-6 col-lg-4 mx-auto">
                    <div class="card border rounded">
                        <div class="card-header bg-white">
                            <h4 class="card-title">Editar producto</h4>
                        </div>
                        <div class="card-body">
                            <form action="/products/update/<%= id %>?_method=PUT" method="POST" class="row" enctype="multipart/form-data">
                                    <div class="mb-3">
                                    <label for="countryName" class="form-label">Pais</label>
                                    <input type="text" class="form-control" id="countryName" name="country"
                                        value="<%= country %>" required>
                                </div>

                                <div class="mb-3">
                                    <label for="hotelName" class="form-label">Hotel</label>
                                    <input type="text" class="form-control" id="hotelName" name="hotel"
                                        value="<%= hotel %>" required>
                                </div>

                                <div class="mb-3">
                                    <label for="flight" class="form-label">Vuelos</label>
                                    <select class="form-select" id="flight" name="flight">
                                        <option value="sin-escala" <%= flight === 'sin escala' ? 'selected' : '' %>>Sin escala</option>
                                        <option value="con-escala" <%= flight === 'con escala' ? 'selected' : '' %>>Con escala</option>
                                    </select>
                                </div>

                                <div class="mb-3">
                                    <label for="productDescription" class="form-label">Descripci√≥n</label>
                                    <textarea class="form-control" id="productDescription" style="resize: none;"
                                        name="description" required><%= description %></textarea>
                                </div>

                                <div class="mb-3">
                                    <label for="productPrice" class="form-label">Precio</label>
                                    <input type="number" class="form-control" id="productPrice" name="price"
                                        min="0" step="0.01" value="<%= price %>" required>
                                </div>

                                <div class="mb-3">
                                    <label for="productDiscount" class="form-label">Descuento</label>
                                    <input type="number" class="form-control" id="productDiscount" name="discount"
                                        min="0" max="100" value="<%= discount %>" required>
                                </div>

                                <div class="d-flex justify-content-between mb-3">
                                    <label for="productImage" class="btn btn-secondary">Editar imagen</label>

                                    <input hidden class="form-control" type="file" id="productImage">
                                    <button class="btn btn-dark" type="submit">Guardar cambios</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>

    <%- include('partials/footer') %>
</body>

</html>
